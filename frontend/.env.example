# =============================================================================
# RAG Chat UI - Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------

# URL of the backend FastAPI server
# In development (running locally): http://localhost:8000
# In Docker Compose: http://backend:8000 (internal) or http://localhost:8000 (from host)
BACKEND_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Application name shown in the UI
NEXT_PUBLIC_APP_NAME=RAG Assistant

# Default user ID (for development/demo purposes)
# In production, implement proper authentication
NEXT_PUBLIC_DEFAULT_USER_ID=default-user

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable debug mode (shows additional logging)
NEXT_PUBLIC_DEBUG=false

# Enable/disable dark mode by default
NEXT_PUBLIC_DEFAULT_DARK_MODE=false

# -----------------------------------------------------------------------------
# API Polling Configuration
# -----------------------------------------------------------------------------

# Initial polling interval in milliseconds
NEXT_PUBLIC_POLL_INITIAL_INTERVAL=500

# Maximum polling interval in milliseconds
NEXT_PUBLIC_POLL_MAX_INTERVAL=3000

# Polling timeout in milliseconds (2 minutes)
NEXT_PUBLIC_POLL_TIMEOUT=120000

# -----------------------------------------------------------------------------
# Upload Configuration
# -----------------------------------------------------------------------------

# Maximum file size for uploads in MB
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50

# Maximum number of files per upload
NEXT_PUBLIC_MAX_FILES=10

# -----------------------------------------------------------------------------
# Optional: Analytics & Monitoring
# -----------------------------------------------------------------------------

# PostHog (optional analytics)
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=

# Sentry (optional error tracking)
# SENTRY_DSN=
# NEXT_PUBLIC_SENTRY_DSN=

# -----------------------------------------------------------------------------
# Docker/Production Settings
# -----------------------------------------------------------------------------

# Port the frontend runs on (default: 3001)
PORT=3001

# Hostname binding
HOSTNAME=0.0.0.0
